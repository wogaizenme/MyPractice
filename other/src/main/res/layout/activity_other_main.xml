<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/to_load_config"
            style="@style/button_style"
            android:onClick="onViewClicked"
            android:text="加载配置项" />

        <Button
            android:id="@+id/to_change_text_size"
            style="@style/button_style"
            android:onClick="onViewClicked"
            android:text="修改系统字体大小" />

        <Button
            android:id="@+id/to_read_file"
            style="@style/button_style"
            android:onClick="onViewClicked"
            android:text="读取文件" />

        <Button
            android:id="@+id/to_mvvm"
            style="@style/button_style"
            android:onClick="onViewClicked"
            android:text="MVVM" />

        <Button
            android:id="@+id/to_setting"
            style="@style/button_style"
            android:onClick="onViewClicked"
            android:text="设置" />

        <Button
            android:id="@+id/read_raw"
            style="@style/button_style"
            android:onClick="onViewClicked"
            android:text="读取raw文件夹下" />

        <Button
            android:id="@+id/to_encode"
            style="@style/button_style"
            android:onClick="onViewClicked"
            android:text="加密" />

        <Button
            android:id="@+id/to_output_log"
            style="@style/button_style"
            android:onClick="onViewClicked"
            android:text="日志输出" />

        <Button
            android:id="@+id/to_fragment_switch"
            style="@style/button_style"
            android:onClick="onViewClicked"
            android:text="Fragment切换" />
    </android.support.v7.widget.LinearLayoutCompat>

</ScrollView>
