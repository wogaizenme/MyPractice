<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.practice.MainActivity">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/to_snack"
                style="@style/button_style"
                android:onClick="showSnackBar"
                android:text="测试SnackBar" />

            <Button
                android:id="@+id/to_system_view"
                style="@style/button_style"
                android:onClick="onViewClicked"
                android:text="系统控件" />

            <Button
                android:id="@+id/to_dependencies"
                style="@style/button_style"
                android:onClick="onViewClicked"
                android:text="第三方库" />

            <Button
                android:id="@+id/to_custom_view"
                style="@style/button_style"
                android:onClick="onViewClicked"
                android:text="自定义View相关" />

            <Button
                android:id="@+id/to_design_pattern"
                style="@style/button_style"
                android:onClick="onViewClicked"
                android:text="框架" />

            <Button
                android:id="@+id/to_other"
                style="@style/button_style"
                android:onClick="onViewClicked"
                android:text="其他的" />

            <Button
                android:id="@+id/to_setting"
                style="@style/button_style"
                android:onClick="onViewClicked"
                android:text="设置页面" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_test"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/ic_test"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>
</layout>