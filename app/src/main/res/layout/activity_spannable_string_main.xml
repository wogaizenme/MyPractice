<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_spannable_string_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:divider="@drawable/divider_linearlayoutcompat"
        app:showDividers="middle|end">

        <TextView
            android:id="@+id/foreground_color"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/background_color"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/strikethrough"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/relativesize"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/superscript"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subscript"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/style"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/clickble"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/urlspan"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/_1F1F1F"
            android:textSize="16sp" />


    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>