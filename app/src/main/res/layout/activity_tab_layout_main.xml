<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_tablayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:theme="@style/Theme.AppCompat"
        app:paddingStart="120dp"
        app:tabBackground="@android:color/white"
        app:tabIndicatorColor="@color/_FF3E30"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabPaddingEnd="20dp"
        app:tabPaddingStart="20dp"
        app:tabSelectedTextColor="@color/_FF3E30"
        app:tabTextAppearance="@style/Tablayout_Title_Style"
        app:tabTextColor="@color/_5F5F5F"
        app:tabGravity="center"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/tablayout_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
