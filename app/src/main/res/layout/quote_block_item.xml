<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/_F8F8F8"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/block_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_1E1E1E"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="旅游综合" />

    <TextView
        android:id="@+id/block_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_FF3E30"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="+2.21%" />

    <TextView
        android:id="@+id/lead_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textColor="@color/_1F1F1F"
        android:textSize="12sp"
        android:text="西藏旅游" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lead_stock_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textColor="@color/_5F5F5F"
            android:textSize="10sp"
            android:text="23.87" />

        <TextView
            android:id="@+id/lead_stock_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/_5F5F5F"
            android:textSize="10sp"
            android:text="+10.00%" />
    </LinearLayout>

</LinearLayout>