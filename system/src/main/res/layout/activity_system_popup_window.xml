<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_01"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="在指定控件下弹出" />

        <Button
            android:id="@+id/button_02"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="偏移量" />

        <Button
            android:id="@+id/button_03"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="相对于父控件弹出" />

        <Button
            android:id="@+id/button_04"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="点击消失" />

        <Button
            android:id="@+id/button_05"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="update方法" />

        <Button
            android:id="@+id/button_06"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="载入载出动画" />

        <Button
            android:id="@+id/button_07"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="弹出时所在页面半透明" />

        <Button
            android:id="@+id/button_08"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="弹出占满屏幕的背景半透明的" />

        <Button
            android:id="@+id/button_09"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="在控件上方显示" />

        <Button
            android:id="@+id/button_10"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="获取焦点且点击外部不消失" />
        <Button
            android:id="@+id/button_11"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onViewClicked"
            android:text="ListPopupWindow" />
    </LinearLayout>
</ScrollView>
